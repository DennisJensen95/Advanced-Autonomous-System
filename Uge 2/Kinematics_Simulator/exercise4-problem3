%%%Exercise 4
% Problem 3

pi=3.141592

%where the robot should go
xin = 0.5
yin = 0.5
thin = pi/2

%Calculate variables%

set "$odox" 0
set "$odoy" 0
set "$odoth" 0


vel = 1


xtar = xin - $odox
ytar = yin - $odoy
thtar = thin - $odoth

rho = sqrt(xtar*xtar+ytar*ytar)
alpha = -$odoth + atan2(ytar,xtar)
beta = thtar - alpha


%Perform movement%
turn alpha ["rad"]
fwd rho @v vel
turn beta ["rad"]